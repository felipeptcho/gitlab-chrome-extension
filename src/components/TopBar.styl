.App__TopBar
  display flex
  height 58px
  padding 10px
  background-color #FAFAFA
  border-bottom 1px solid rgb(229, 229, 229)

.App__TopBar_Content
  display flex
  flex 1
  align-items center

  .icon
    color rgba(0,0,0,0.55)

  .input
    flex 1
    margin-right 10px

  .plus
    margin-right 10px

  .ui.dropdown > .dropdown.icon
    margin 0

  .menu
    top 35px!important
    left -87px!important
    padding 3px!important

.App__TopBar_Content_Title
  flex 1
  font-size 1.2em
  font-weight bold
  margin-right 10px
  overflow hidden
